{
    "name": "png-creator",
    "version": "2.0.0",
    "description": "A tool for creating PNG images programmatically",
    "keywords": [
        "png",
        "image",
        "graphics",
        "canvas"
    ],
    "homepage": "https://github.com/AymenBida/png-creator",
    "bugs": {
        "url": "https://github.com/AymenBida/png-creator/issues"
    },
    "author": "Aymen Bida <aymen.bida.00@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AymenBida/png-creator.git"
    },
    "files": [
        "dist"
    ],
    "type": "module",
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.29.5",
        "@types/node": "^24.2.0",
        "@vitest/coverage-v8": "^3.2.4",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "scripts": {
        "test": "vitest run --coverage",
        "dev": "vitest",
        "build": "tsc",
        "ci": "npm run build && npm run check-format && npm run test",
        "format": "prettier --write src",
        "check-format": "prettier --check src",
        "local-release": "changeset version && changeset publish",
        "prepublishOnly": "npm run ci"
    },
    "exports": {
        ".": {
            "import": "./dist/png.js",
            "types": "./dist/png.d.ts"
        },
        "./canvas": {
            "import": "./dist/pixelCanvas.js",
            "types": "./dist/pixelCanvas.d.ts"
        }
    }
}
